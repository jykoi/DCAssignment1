<Window x:Class="ClientApp.LobbyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="LobbyWindow" Height="450" Width="800">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button x:Name="RefreshBtn" Content="Refresh" Width="80" Height="28" Click="RefreshBtn_Click"/>
            <TextBlock x:Name="Status" Margin="12,4,0,0" Foreground="Gray"/>
        </StackPanel>

        <ListBox x:Name="LobbiesList"/>
    </DockPanel>
</Window>
