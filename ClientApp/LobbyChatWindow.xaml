
<Window x:Class="ClientApp.LobbyChatWindow"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lobby Chat" Height="450" Width="800">

    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <Button x:Name="RefreshBtn" Content="Refresh" Width="80" Height="28" Click="RefreshBtn_Click"/>
            <TextBlock x:Name="Status" Margin="12,4,0,0" Foreground="Gray"/>
        </StackPanel>

        <ListBox x:Name="ChatList" Height="200" Margin="10"/>
        <TextBox x:Name="MessageInput" Height="30" Margin="10"/>
        
        <Button Content="Send" Click="SendMessage_Click" Width="80" Margin="10"/>
        
    </DockPanel>
</Window>
