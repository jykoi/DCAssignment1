<Window x:Class="DuplexClient.PrivateChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Private Chat" Height="420" Width="360">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText" Grid.Row="0" Margin="0,0,0,8" FontWeight="Bold"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MessagesList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,2,0,2">
                            <TextBlock Text="{Binding FromUser}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding Timestamp}" FontStyle="Italic" FontSize="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <DockPanel Grid.Row="2" Margin="0,8,0,0">
            <TextBox x:Name="InputBox" DockPanel.Dock="Left" MinWidth="220" Margin="0,0,8,0"/>
            <Button x:Name="SendButton" Content="Send" Width="80" Click="SendButton_Click"/>
        </DockPanel>
    </Grid>
</Window>
