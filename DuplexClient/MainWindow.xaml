<Window x:Class="DuplexClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Server Login Screen (Duplex)" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Arial" FontWeight="Bold"/>
        <TextBox x:Name="usernameField" HorizontalAlignment="Left" Margin="280,0,0,0" TextWrapping="Wrap" Text="Enter your username" VerticalAlignment="Center" Width="132" Height="33"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="432,0,0,0" VerticalAlignment="Center" Height="33" Width="62" Click="loginBtn_Click"/>
        <ProgressBar Name="progBar" HorizontalAlignment="Center" Height="11" Margin="0,310,0,0" VerticalAlignment="Top" Width="274"/>
    </Grid>
</Window>
